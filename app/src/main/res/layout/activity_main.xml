<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/targetBpm"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp"
            app:layout_constraintBottom_toTopOf="@+id/bpmSlider"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/targetConsecutiveCorrect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bpmSlider" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tolerance"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tolerance"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/targetConsecutiveCorrect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/trainButton"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="20dp" android:id="@+id/bpmSlider"
            app:layout_constraintRight_toRightOf="@id/targetBpm" app:layout_constraintLeft_toLeftOf="@id/targetBpm"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/targetBpm"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/targetConsecutiveCorrect"/>
    <Button
            android:text="Train!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/trainButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tolerance" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="361dp" android:onClick="handleButtonPress"/>
</androidx.constraintlayout.widget.ConstraintLayout>